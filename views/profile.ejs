<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="https://img.icons8.com/color-glass/48/000000/social-network.png" type="image/x-icon">
    <title>Daily Journal |
        <%= author %>
    </title>
    <link rel="stylesheet" href="/css/profile.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body style="background-color: rgb(240, 240, 240);">
    <center>
        <div class="container">
            <div class="alert alert-white alert-dismissible fade show mt-2" id="msg" role="alert" style="border-radius: 20px;">
                <strong>Copied!</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <div class="banner__image" style="background-image: url('<%= banner %>');">
                <h3 class="text-white">"<span id="your-elements-id"></span>"</h3>
            </div>
            <a href="<%= profile %> " target="_blank" rel="noopener noreferrer">
                <img class="profile__image" src="<%= profile %>" alt="<%= author %> ">
            </a>
            <div class="description__div mt-2">
                <div class="share-div" style="float: right;">
                    <button class="btn" onclick="copy();">
                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="grey" class="bi bi-clipboard" viewBox="0 0 16 16">
                            <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z"/>
                            <path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3z"/>
                        </svg>
                    </button>
                    <input type="text" class="form-control" value="https://blog-jouranl.herokuapp.com/profile/<%= id %> " id="myInput" readonly="true">
                </div>
                <h2>Profile</h2>
                <p class="username">
                    <a href="/profile/<%= id %> " target="_blank" rel="noopener noreferrer" class="text-primary link-navigate">
                        @<%= author %> 
                        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-arrow-up-right-circle" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.854 10.803a.5.5 0 1 1-.708-.707L9.243 6H6.475a.5.5 0 1 1 0-1h3.975a.5.5 0 0 1 .5.5v3.975a.5.5 0 1 1-1 0V6.707l-4.096 4.096z"/>
                        </svg>
                    </a>
                </p>
                <h4 class="text-dark" style="text-align: left;">
                    <%= author %>
                        <span class="text-primary" data-tooltip="<%= author %>'s account is authentic or verified.">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#113CFC" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                        </svg>
                    </span>
                </h4>
                <hr>
                <h3>Bio</h3>
                <p class="about-p" id="about">
                    No Bio
                </p>
                <h3>Relationship <span class="badge bg-primary">New</span></h3>
                <p class="about-p" id="relations">
                    Not given by
                    <%= author %>
                </p>
                <h3>
                    Location
                </h3>
                <h4 class="text-muted" style="text-align: left;">
                    <%= place %>
                </h4>

                <h3>Posts</h3>
                <div class="card" style="width: 18rem;">
                    <a href="/posts/<%= id %>/view_post " target="_blank">
                        <img src="<%= banner %> " class="card-img-top" alt="<%= title %> " />
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= title %>
                        </h5>
                        <a href="/posts/<%= id %>/view_post " target="_blank" class="btn btn-primary">View post</a><br>
                        <a href="/posts/<%= id %>/view_post#player" target="_blank" rel="noopener noreferrer" style="text-decoration: none;">or watch video</a>
                        <p class="text-muted">
                            Published date:
                            <%= date %>
                        </p>
                    </div>
                </div>
            </div>
            <h4 class="text-dark">From Daily Journal
                <img src="https://img.icons8.com/color-glass/48/000000/social-network.png" alt="Logo" class="img-fluid" style="margin-left: 10px;">
            </h4>
            <br><br>
        </div>
    </center>

    <script>
        about = "<%= about %>";

        function aboutCondition() {
            if (about == "") {

            } else {
                document.getElementById("about").innerHTML = about;
            }
        }

        aboutCondition();

        relationship = "<%= relations %>";

        function relationsCondition() {
            if (relationship == "") {

            } else if (relationship == "Married") {
                document.getElementById("relations").innerHTML = "<span class='text-primary'>" + relationship + " <i class='fa fa-venus-mars' style='font-size:25px;font-weight: 600;'></i></span>";
            } else if (relationship == "Single") {
                document.getElementById("relations").innerHTML = "<span class='text-danger'>" + relationship + " <svg xmlns='http://www.w3.org/2000/svg' width='25' height='25' fill='currentColor' class='bi bi-emoji-heart-eyes-fill' viewBox='0 0 16 16'>" + "  <path d='M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0zM4.756 4.566c.763-1.424 4.02-.12.952 3.434-4.496-1.596-2.35-4.298-.952-3.434zm6.559 5.448a.5.5 0 0 1 .548.736A4.498 4.498 0 0 1 7.965 13a4.498 4.498 0 0 1-3.898-2.25.5.5 0 0 1 .548-.736h.005l.017.005.067.015.252.055c.215.046.515.108.857.169.693.124 1.522.242 2.152.242.63 0 1.46-.118 2.152-.242a26.58 26.58 0 0 0 1.109-.224l.067-.015.017-.004.005-.002zm-.07-5.448c1.397-.864 3.543 1.838-.953 3.434-3.067-3.554.19-4.858.952-3.434z'/>" + "</svg></span>";
            } else if (relationship == "In Relationship") {
                document.getElementById("relations").innerHTML = "<span class='text-danger'>" + relationship + " <i class='fa fa-heart' style='font-size:25px;font-weight: 600;'></i></span>";
            }
        }

        relationsCondition();
    </script>
    <script src="/js/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
</body>

</html>